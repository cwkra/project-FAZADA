<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="175.0" prefWidth="350.0" stylesheets="@../styles/default.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.SignUpSuccessController">
   <children>
      <HBox alignment="CENTER" layoutY="90.0" prefHeight="30.0" prefWidth="350.0">
         <children>
            <Label styleClass="normal-text" text="สร้างบัญชีสำเร็จ! กรุณาเข้าสู่ระบบเพื่อใช้งาน" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="125.0" prefHeight="50.0" prefWidth="350.0">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" text="ตกลง">
               <styleClass>
                  <String fx:value="button-text" />
                  <String fx:value="shadow-effect" />
                  <String fx:value="round-border" />
                  <String fx:value="submit-button" />
               </styleClass>
               <padding>
                  <Insets bottom="2.5" left="25.0" right="25.0" top="2.5" />
               </padding>
            </Button>
         </children>
      </HBox>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="150.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/verified.gif" />
         </image>
      </ImageView>
      <Label layoutX="15.0" layoutY="7.5" prefWidth="320.0" text="ทำรายการสำเร็จ">
         <styleClass>
            <String fx:value="round-border" />
            <String fx:value="normal-text" />
            <String fx:value="success-color" />
         </styleClass>
         <padding>
            <Insets left="10.0" />
         </padding>
      </Label>
   </children>
   <styleClass>
      <String fx:value="quarterly-color" />
      <String fx:value="less-round-border" />
      <String fx:value="stroke-border" />
      <String fx:value="shadow-effect" />
   </styleClass>
</AnchorPane>
