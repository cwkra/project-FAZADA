<AnchorPane prefHeight="800.0" prefWidth="1280.0" styleClass="primary-color" stylesheets="@../styles/default.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.shop.MyShopController">
   <children>
      <BorderPane layoutX="540.0" layoutY="300.0" prefHeight="800.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="secondary-color" />
                  <String fx:value="shadow-effect" />
               </styleClass>
               <children>
                  <Label alignment="CENTER" prefHeight="75.0" prefWidth="200.0" text="ร้านค้าของฉัน">
                     <styleClass>
                        <String fx:value="normal-text" />
                        <String fx:value="tertiary-color" />
                        <String fx:value="shadow-effect" />
                     </styleClass>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#goToOrderList" prefHeight="75.0" prefWidth="200.0" text="รายการคำสั่งซื้อ">
                     <styleClass>
                        <String fx:value="normal-text" />
                        <String fx:value="shadow-effect" />
                        <String fx:value="primary-button" />
                     </styleClass>
                  </Button>
                  <Button ellipsisString="" mnemonicParsing="false" onAction="#goToDeliveryList" prefHeight="75.0" prefWidth="200.0" text="รายการจัดส่งสินค้า" textOverrun="CLIP">
                     <styleClass>
                        <String fx:value="normal-text" />
                        <String fx:value="shadow-effect" />
                        <String fx:value="primary-button" />
                     </styleClass>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </BorderPane.margin>
               <styleClass>
                  <String fx:value="secondary-color" />
                  <String fx:value="shadow-effect" />
                  <String fx:value="round-border" />
               </styleClass>
               <children>
                  <AnchorPane prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="shopNameLabel" text="ชื่อร้านค้า" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="25.0">
                           <styleClass>
                              <String fx:value="header-text" />
                              <String fx:value="tertiary-color" />
                              <String fx:value="round-border" />
                              <String fx:value="shadow-effect" />
                           </styleClass>
                           <padding>
                              <Insets bottom="5.0" left="25.0" right="25.0" top="5.0" />
                           </padding>
                        </Label>
                        <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#goToAddProduct" text="+ เพิ่มรายการสินค้า" AnchorPane.leftAnchor="745.0" AnchorPane.topAnchor="25.0">
                           <styleClass>
                              <String fx:value="button-text" />
                              <String fx:value="round-border" />
                              <String fx:value="shadow-effect" />
                              <String fx:value="primary-button" />
                           </styleClass>
                        </Button>
                     </children>
                  </AnchorPane>
                  <HBox prefHeight="475.0" prefWidth="900.0">
                     <children>
                        <ScrollPane fx:id="scroll" prefWidth="1000.0">
                           <content>
                              <GridPane fx:id="grid" prefHeight="1.0" prefWidth="0.0">
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                              </GridPane>
                           </content>
                        </ScrollPane>
                     </children>
                     <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="secondary-color" />
                  <String fx:value="shadow-effect" />
               </styleClass>
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="&lt; ย้อนกลับ">
                     <styleClass>
                        <String fx:value="round-border" />
                        <String fx:value="button-text" />
                        <String fx:value="cancel-button" />
                        <String fx:value="shadow-effect" />
                     </styleClass>
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                  </Button>
                  <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="shadow-effect">
                     <image>
                        <Image url="@../../../images/FAZADA.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="900.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
