<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="175.0" prefWidth="350.0" stylesheets="@../styles/default.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.shop.PurchaseSuccessfulController">
   <children>
      <HBox alignment="CENTER" layoutY="75.0" prefHeight="30.0" prefWidth="350.0">
         <children>
            <Label styleClass="normal-text" text="ขอบคุณ! เราได้รับคำสั่งซื้อของคุณแล้ว" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" layoutY="125.0" prefHeight="50.0" prefWidth="350.0">
         <children>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" text="ตกลง">
               <styleClass>
                  <String fx:value="normal-text" />
                  <String fx:value="shadow-effect" />
                  <String fx:value="round-border" />
                  <String fx:value="submit-button" />
               </styleClass>
            </Button>
         </children>
      </HBox>
      <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="150.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/verified.gif" />
         </image>
      </ImageView>
      <Button fx:id="closeButton" ellipsisString="" layoutX="320.0" layoutY="10.0" mnemonicParsing="false" onAction="#clickCloseButton" prefHeight="20.0" prefWidth="20.0" text="X" textOverrun="CLIP">
         <font>
            <Font name="FC Iconic Regular" size="10.0" />
         </font>
         <styleClass>
            <String fx:value="cancel-button" />
            <String fx:value="round-border" />
            <String fx:value="shadow-effect" />
         </styleClass>
      </Button>
   </children>
   <styleClass>
      <String fx:value="quarterly-color" />
      <String fx:value="less-round-border" />
   </styleClass>
</AnchorPane>
